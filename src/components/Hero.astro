---
import { t } from '../utils/i18n';

interface Props {
  locale: string;
  basePath: string;
}

const { locale, basePath } = Astro.props;
---

<section class="relative overflow-hidden bg-gradient-to-br from-orange-50 via-pink-50 to-purple-50 section-padding">
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-20 right-10 w-72 h-72 bg-gradient-to-br from-orange-300/30 to-pink-300/30 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 left-10 w-96 h-96 bg-gradient-to-br from-purple-300/30 to-pink-300/30 rounded-full blur-3xl"></div>
  </div>

  <div class="container-custom relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div>
        <div class="mb-6">
          <span class="badge-colorful badge-orange">üéâ {t(locale, 'hero.description')}</span>
        </div>
        <h1 class="hook-text mb-6 font-display">{t(locale, 'hero.subtitle')}</h1>
        <p class="hook-subtext mb-8">{t(locale, 'hero.description')}</p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="https://wa.me/34625458704?text=Hola!%20Estoy%20interesado%20en%20sus%20servicios" target="_blank" rel="noopener noreferrer" class="btn-whatsapp text-lg px-10 py-4 inline-flex items-center justify-center gap-3 text-center">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
            {t(locale, 'hero.reserve')}
          </a>
          <a href={`${basePath || '/'}#servicios`} class="btn-secondary text-lg px-10 py-4 inline-block text-center">{t(locale, 'hero.viewServices')}</a>
        </div>
      </div>

      <div class="relative">
        <div class="relative rounded-3xl overflow-hidden shadow-2xl border-4 border-white">
          <video autoplay loop muted playsinline class="w-full h-auto object-cover object-[50%_20%] lg:h-[500px] lg:object-center" style="aspect-ratio: 16/9" aria-label="Logo animado de Diverpark con globos">
            <source src="/logo-animado.mp4" type="video/mp4" />
          </video>
          <img src="/images/castillos-grandes/castillo-hinchable-grande-avion-5.jpg" alt="Alquiler de castillos hinchables grandes en Mallorca para fiestas, comuniones y eventos - Diverpark" width="800" height="500" class="w-full h-auto object-cover object-center lg:h-[500px] hidden" loading="eager" fetchpriority="high" />
          <div class="absolute inset-0 bg-gradient-to-t from-orange-600/20 to-transparent"></div>
        </div>
        <div class="absolute -top-4 -right-4 badge-colorful badge-pink">‚≠ê {t(locale, 'hero.title')}</div>
      </div>
    </div>
  </div>
</section>
