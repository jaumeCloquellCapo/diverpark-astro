    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {servicesList.map((service) => {
        const title = t(locale, service.titleKey);
        const desc = service.descParams.length
          ? t(locale, service.descKey, ...service.descParams.map((k) => t(locale, k)))
          : t(locale, service.descKey);
        return (
          <div class="card group overflow-hidden relative flex flex-col h-full hover:border-orange-300">
            <a href={`${basePath}${service.to}`} class="block">
              <div class="relative h-48 mb-6 rounded-2xl overflow-hidden">
                <img src={service.image} alt={`Alquiler de ${title} en Mallorca - Diverpark`} width="400" height="300" loading="lazy" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" />
                <div class="absolute inset-0 bg-gradient-to-t from-orange-600/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
                <div class="absolute top-4 right-4 text-5xl opacity-90 group-hover:scale-125 transition-transform">{service.icon}</div>
                <div class="absolute bottom-4 left-4 right-4 md:opacity-0 md:group-hover:opacity-100 transition-opacity">
                  <div class="bg-gradient-to-r from-orange-500 to-pink-500 backdrop-blur-sm rounded-xl px-4 py-2 text-center shadow-lg">
                    <span class="text-sm font-bold text-white flex items-center justify-center gap-2">üì∏ Ver galer√≠a completa</span>
                  </div>
                </div>
              </div>
            </a>
            <div class="flex flex-col flex-grow">
              <a href={`${basePath}${service.to}`}>
                <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-orange-600 transition-colors font-display">{title}</h3>
                <p class="text-gray-600 mb-4">{desc}</p>
              </a>
              <div class="flex gap-3 mt-auto pt-4 border-t-2 border-orange-100">
                <a href={`${basePath}${service.to}`} class="flex-1 bg-gradient-to-r from-orange-500 to-pink-500 text-white font-bold py-3 px-4 rounded-2xl text-center text-sm hover:shadow-lg hover:scale-105 transition-all duration-300">üì∏ Ver Galer√≠a</a>
                <a href={whatsappMessage(title)} target="_blank" rel="noopener noreferrer" class="btn-whatsapp text-sm whitespace-nowrap flex items-center gap-2">
