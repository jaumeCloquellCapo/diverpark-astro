---
import { t } from '../utils/i18n';

interface Props {
  locale: string;
  basePath: string;
}

const { locale, basePath } = Astro.props;

const whatsappMessage = (serviceName: string) =>
  `https://wa.me/34625458704?text=${encodeURIComponent(`Hola! Estoy interesado en: ${serviceName}`)}`;

const servicesList = [
  { to: '/castillos-pequenos', icon: 'üéà', titleKey: 'home.services.smallCastles.title', descKey: 'home.services.smallCastles.description', descParams: ['about.rental', 'about.events'], image: '/images/castillos-pequenos/castillo-hinchable-pequeno-spider-1-10.jpg' },
  { to: '/castillos-grandes', icon: 'üè∞', titleKey: 'home.services.largeCastles.title', descKey: 'home.services.largeCastles.description', descParams: ['about.rental', 'about.events'], image: '/images/castillos-grandes/castillo-hinchable-grande-dragonkan-11.jpg' },
  { to: '/castillos-acuaticos', icon: 'üåä', titleKey: 'services.waterCastles.title', descKey: 'pages.waterCastles.intro', descParams: [], image: '/images/castillos-acuaticos/castillo-hinchable-acuatico-castillo-agua-1.jpg' },
  { to: '/castillos-tobogan', icon: 'üé¢', titleKey: 'home.services.slideCastles.title', descKey: 'home.services.slideCastles.description', descParams: ['about.rental', 'about.events'], image: '/images/castillos-tobogan/castillo-hinchable-tobogan-robot-8.jpg' },
  { to: '/toro-mecanico', icon: 'üêÇ', titleKey: 'home.services.mechanicalBull.title', descKey: 'home.services.mechanicalBull.description', descParams: ['about.rental', 'about.events'], image: '/images/toro-mecanico/toro-mecanico_toro-mecanico5.jpg' },
  { to: '/animaciones', icon: 'üé≠', titleKey: 'home.services.animations.title', descKey: 'home.services.animations.description', descParams: ['nav.animations', 'about.events'], image: '/images/animaciones/animacion-infantil-anmadoras-1.jpg' },
];

const stats = [
  { value: '+10.000', labelKey: 'home.experience.eventsCount', sublabelKey: 'experience.events' },
  { value: '+40', labelKey: 'home.experience.castlesCount', sublabelKey: 'services.title' },
  { value: '+2.500', labelKey: 'home.experience.clientsCount', sublabelKey: 'experience.satisfied' },
];

const safetyDescriptionHtml = t(locale, 'home.safety.description').replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>');
---

<!-- Sobre Nosotros -->
<section id="sobre-nosotros" class="section-padding bg-gradient-to-br from-yellow-50 via-orange-50 to-pink-50 relative overflow-hidden">
  <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-br from-orange-300/20 to-pink-300/20 rounded-full blur-3xl"></div>
  <div class="container-custom relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="relative order-2 lg:order-1">
        <div class="relative rounded-3xl overflow-hidden shadow-2xl border-4 border-white">
          <img src="/images/castillos-pequenos/castillo-hinchable-pequeno-spider-1-10.jpg" alt="Alquiler de castillos hinchables peque√±os en Mallorca para fiestas infantiles y comuniones - Diverpark" width="600" height="400" loading="lazy" class="w-full h-[400px] object-cover" />
        </div>
        <div class="absolute -bottom-4 -left-4 badge-colorful badge-yellow">‚ú® {t(locale, 'hero.title')}</div>
      </div>
      <div class="order-1 lg:order-2">
        <div class="mb-4"><span class="badge-colorful badge-orange text-xs">{t(locale, 'about.title').toUpperCase()}</span></div>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6 leading-tight font-display">{t(locale, 'pages.about.subtitle')}</h2>
        <p class="text-xl text-gray-700 mb-6 leading-relaxed">{t(locale, 'home.about.intro', t(locale, 'about.rental'), t(locale, 'about.events'))}</p>
        <p class="text-lg text-gray-600 leading-relaxed">{t(locale, 'home.about.description', t(locale, 'about.rental'), t(locale, 'about.events'), t(locale, 'about.foamParties'))}</p>
      </div>
    </div>
  </div>
</section>

<!-- Seguridad -->
<section class="section-padding bg-gradient-to-br from-green-50 via-teal-50 to-cyan-50 relative overflow-hidden">
  <div class="absolute top-10 left-10 w-64 h-64 bg-gradient-to-br from-green-300/20 to-teal-300/20 rounded-full blur-3xl"></div>
  <div class="container-custom relative z-10">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-16">
        <div class="mb-4">
          <span class="inline-block px-5 py-2 bg-gradient-to-r from-green-400 to-teal-500 text-white rounded-full text-sm font-bold shadow-md">üõ°Ô∏è {t(locale, 'home.safety.badge')}</span>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6 leading-tight font-display">
          {t(locale, 'home.safety.title')} <span class="bg-gradient-to-r from-green-600 to-teal-600 bg-clip-text text-transparent">{t(locale, 'home.safety.titleSuffix')}</span>
        </h2>
        <p class="text-xl text-gray-700 max-w-3xl mx-auto leading-relaxed" set:html={safetyDescriptionHtml} />
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="card text-center hover:border-green-300 bg-white">
          <div class="text-6xl mb-4">üõ°Ô∏è</div>
          <h3 class="text-xl font-bold text-gray-900 mb-3 font-display">{t(locale, 'safety.norm')}</h3>
          <p class="text-gray-600">{t(locale, 'pages.about.safety.item2')}</p>
        </div>
        <div class="card text-center hover:border-teal-300 bg-white">
          <div class="text-6xl mb-4">‚úÖ</div>
          <h3 class="text-xl font-bold text-gray-900 mb-3 font-display">{t(locale, 'pages.about.safety.item3')}</h3>
          <p class="text-gray-600">{t(locale, 'pages.about.safety.item3')}</p>
        </div>
        <div class="card text-center hover:border-cyan-300 bg-white">
          <div class="text-6xl mb-4">üîí</div>
          <h3 class="text-xl font-bold text-gray-900 mb-3 font-display">{t(locale, 'pages.about.safety.item1')}</h3>
          <p class="text-gray-600">{t(locale, 'pages.about.safety.item1')}</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Estad√≠sticas -->
<section class="section-padding bg-gradient-to-br from-purple-600 via-pink-600 to-orange-600 text-white relative overflow-hidden">
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-10 left-10 w-32 h-32 border-4 border-white rounded-full"></div>
    <div class="absolute bottom-20 right-20 w-48 h-48 border-4 border-white rounded-full"></div>
    <div class="absolute top-1/2 right-1/3 w-24 h-24 border-4 border-white rounded-full"></div>
  </div>
  <div class="container-custom relative z-10">
    <div class="text-center mb-16">
      <div class="mb-4">
        <span class="inline-block px-6 py-2 bg-white/20 backdrop-blur-sm rounded-full text-sm font-bold text-white">üìä {t(locale, 'experience.title').toUpperCase()}</span>
      </div>
      <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white font-display">{t(locale, 'experience.title')}</h2>
      <p class="text-lg text-white/90 max-w-2xl mx-auto">{t(locale, 'home.experience.description', t(locale, 'home.experience.events'), t(locale, 'home.experience.castles'))}</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {stats.map((stat) => (
        <div class="bg-white/20 backdrop-blur-md rounded-3xl p-8 text-center border-2 border-white/30 hover:bg-white/30 hover:scale-105 transition-all duration-300">
          <div class="text-6xl font-bold text-white mb-3">{stat.value}</div>
          <div class="text-2xl font-semibold text-white mb-2">{t(locale, stat.labelKey)}</div>
          <div class="text-white/90 font-medium">{t(locale, stat.sublabelKey)}</div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Servicios -->
