                {t(locale, 'gallery.reserve')}
              </a>
            </div>
          </div>
        </div>
        <figcaption class="sr-only">{alt} - {group.count > 1 ? t(locale, 'gallery.imagesAvailable').replace('{count}', String(group.count)) : ''}</figcaption>
      </figure>
  ))}

  <!-- Lightbox -->
  <div class="gallery-lightbox fixed inset-0 bg-black/95 z-50 flex items-center justify-center p-4 hidden" role="dialog" aria-modal="true" aria-label="Visor de imagen">
    <button type="button" class="gallery-lightbox-close absolute top-2 right-2 md:top-4 md:right-4 w-12 h-12 md:w-14 md:h-14 bg-white/10 hover:bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center text-white text-3xl md:text-4xl hover:scale-110 transition-all duration-200 z-20" aria-label="Cerrar">×</button>
    <button type="button" class="gallery-lightbox-prev absolute left-2 md:left-6 w-14 h-14 md:w-16 md:h-16 bg-white/10 hover:bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center text-white text-4xl md:text-5xl hover:scale-110 transition-all duration-200 z-10 hidden" aria-label="Imagen anterior">‹</button>
    <button type="button" class="gallery-lightbox-next absolute right-2 md:right-6 w-14 h-14 md:w-16 md:h-16 bg-white/10 hover:bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center text-white text-4xl md:text-5xl hover:scale-110 transition-all duration-200 z-10 hidden" aria-label="Imagen siguiente">›</button>
    <div class="gallery-lightbox-loading absolute inset-0 flex items-center justify-center z-30 bg-black/40 hidden">
      <div class="bg-black/70 backdrop-blur-md rounded-full p-8 shadow-2xl">
        <div class="w-20 h-20 md:w-24 md:h-24 border-4 border-white/20 border-t-white rounded-full animate-spin"></div>
        <p class="text-white text-sm md:text-base font-bold mt-4 text-center">Cargando...</p>
      </div>
    </div>
    <img class="gallery-lightbox-img max-w-full max-h-full object-contain transition-opacity duration-300" alt="" />
    <div class="gallery-lightbox-counter absolute bottom-4 md:bottom-6 left-1/2 -translate-x-1/2 bg-black/70 backdrop-blur-md text-white px-6 py-3 rounded-full text-base md:text-lg font-bold shadow-2xl border-2 border-white/20 hidden">
      <span class="gallery-lightbox-current">1</span><span class="text-gray-300 mx-2">/</span><span class="gallery-lightbox-total">1</span>
    </div>
  </div>
</div>

<script>
  function initGallery(root: HTMLElement) {
    const data = root.getAttribute('data-groups');
    if (!data) return;
    let groups: { name: string; images: string[] }[];
    try {
      groups = JSON.parse(data) as { name: string; images: string[] }[];
    } catch {
      return;
    }
    if (!groups.length) return;

    const cards = root.querySelectorAll<HTMLElement>('[data-group-index]');
    const lightbox = root.querySelector<HTMLElement>('.gallery-lightbox');
    const lbImg = root.querySelector<HTMLImageElement>('.gallery-lightbox-img');
    const lbClose = root.querySelector<HTMLButtonElement>('.gallery-lightbox-close');
    const lbPrev = root.querySelector<HTMLButtonElement>('.gallery-lightbox-prev');
    const lbNext = root.querySelector<HTMLButtonElement>('.gallery-lightbox-next');
    const lbLoading = root.querySelector<HTMLElement>('.gallery-lightbox-loading');
    const lbCounter = root.querySelector<HTMLElement>('.gallery-lightbox-counter');
    const lbCurrent = root.querySelector<HTMLElement>('.gallery-lightbox-current');
    const lbTotal = root.querySelector<HTMLElement>('.gallery-lightbox-total');

    if (!lightbox || !lbImg) return;
    const lbox = lightbox;
    const imgEl = lbImg;

    let currentImages: string[] = [];
    let currentIndex = 0;

    function showLoading(show: boolean) {
      lbLoading?.classList.toggle('hidden', !show);
      imgEl.classList.toggle('opacity-30', show);
      imgEl.classList.toggle('opacity-100', !show);
    }

    function setImage(src: string) {
      showLoading(true);
      imgEl.alt = '';
      imgEl.src = src;
    }

    function openLightbox(images: string[]) {
      currentImages = images;
      currentIndex = 0;
      document.body.style.overflow = 'hidden';
      lbox.classList.remove('hidden');
      if (currentImages.length > 0) setImage(currentImages[0]);
      if (lbCounter) lbCounter.classList.toggle('hidden', currentImages.length <= 1);
      if (lbPrev) lbPrev.classList.toggle('hidden', currentImages.length <= 1);
      if (lbNext) lbNext.classList.toggle('hidden', currentImages.length <= 1);
      if (lbCurrent) lbCurrent.textContent = String(currentIndex + 1);
      if (lbTotal) lbTotal.textContent = String(currentImages.length);
      onOpen();
    }

    function closeLightbox() {
      document.removeEventListener('keydown', onEscape);
      lbox.classList.add('hidden');
      document.body.style.overflow = '';
      imgEl.removeAttribute('src');
    }

    function go(delta: number) {
      if (currentImages.length <= 1) return;
      currentIndex = (currentIndex + delta + currentImages.length) % currentImages.length;
      setImage(currentImages[currentIndex]);
      if (lbCurrent) lbCurrent.textContent = String(currentIndex + 1);
    }

    imgEl.addEventListener('load', () => showLoading(false));
    imgEl.addEventListener('error', () => showLoading(false));
    lbox.addEventListener('click', (e) => { if (e.target === lbox) closeLightbox(); });
    lbClose?.addEventListener('click', closeLightbox);
    lbPrev?.addEventListener('click', (e) => { e.stopPropagation(); go(-1); });
    lbNext?.addEventListener('click', (e) => { e.stopPropagation(); go(1); });

    const onEscape = (e: KeyboardEvent) => {
      if (e.key === 'Escape' && !lbox.classList.contains('hidden')) closeLightbox();
    };

    function onOpen() {
      document.addEventListener('keydown', onEscape);
    }

    cards.forEach((card) => {
      const idx = card.getAttribute('data-group-index');
      if (idx == null) return;
      const i = parseInt(idx, 10);
      if (i < 0 || i >= groups.length) return;
      card.addEventListener('click', () => openLightbox(groups[i].images));
    });
  }

  document.querySelectorAll<HTMLElement>('.image-gallery-root').forEach(initGallery);
</script>
