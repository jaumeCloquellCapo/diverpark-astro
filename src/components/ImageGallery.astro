            {t(locale, 'gallery.reserve')}
          </a>
          <div class="hidden md:flex absolute inset-0 bg-black/0 group-hover:bg-black/40 transition-all duration-300 items-center justify-center">
            <div class="text-white opacity-0 group-hover:opacity-100 transition-opacity text-center px-4">
              {group.count > 1 && <p class="font-bold text-xl mb-2">{getCastleDisplayName(group.name)}</p>}
              {group.count > 1 && <p class="text-sm mb-4">{t(locale, 'gallery.viewImages').replace('{count}', String(group.count))}</p>}
              <a
                href={getWhatsAppLinkForCastle(group.name)}
                target="_blank"
                rel="noopener noreferrer"
                class="gallery-whatsapp-link bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-bold py-3 px-6 rounded-xl transition-all duration-300 inline-flex items-center gap-2 shadow-lg hover:shadow-2xl hover:scale-105"
