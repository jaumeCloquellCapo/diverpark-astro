---
import { t } from '../utils/i18n';
import { groupImagesByCastle, getCastleDisplayName, getWhatsAppLinkForCastle } from '../utils/galleryGroup';

interface Props {
  images: string[];
  alt?: string;
  groupByCastle?: boolean;
  locale: string;
}

const { images = [], alt = 'Imagen de castillo hinchable', groupByCastle = true, locale } = Astro.props;
const grouped = groupImagesByCastle(images, groupByCastle).filter((g) => g.mainImage);
const galleryId = 'gallery-' + (grouped.length ? grouped[0].mainImage.replace(/\W/g, '').slice(-12) : '') + '-' + Math.random().toString(36).slice(2, 9);
---

<div class="image-gallery-root flex flex-wrap justify-center gap-6" data-gallery-id={galleryId} data-groups={JSON.stringify(grouped.map((g) => ({ name: g.name, images: g.images })))}>
  {grouped.map((group, groupIndex) => (
      <figure
        class="gallery-card overflow-hidden p-0 group cursor-pointer m-0 relative w-full sm:w-[calc(50%-12px)] sm:max-w-[380px] lg:w-[calc(33.333%-16px)] lg:max-w-[380px] rounded-2xl shadow-md hover:shadow-xl transition-shadow"
        data-group-index={groupIndex}
      >
        <div class="relative rounded-2xl overflow-hidden">
          <img
            src={group.mainImage}
            alt={alt}
            width="400"
            height="300"
            loading="lazy"
            decoding="async"
            class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-300"
          />
          {group.count > 1 && (
            <div
              class="absolute top-2 right-2 bg-purple-600 text-white px-3 py-1 rounded-full text-sm font-bold shadow-lg z-10"
              title={t(locale, 'gallery.imagesOfCastle').replace('{count}', String(group.count))}
            >
              +{group.count - 1}
            </div>
          )}
          <div class="absolute bottom-0 left-0 right-0 md:hidden bg-gradient-to-t from-black/80 via-black/60 to-transparent p-4 pt-8">
            <p class="text-white font-bold text-base mb-2 drop-shadow-lg">{getCastleDisplayName(group.name)}</p>
            {group.count > 1 && (
              <p class="text-white/90 text-xs mb-3">{t(locale, 'gallery.viewImages').replace('{count}', String(group.count))}</p>
            )}
          </div>
          <a
            href={getWhatsAppLinkForCastle(group.name)}
            target="_blank"
            rel="noopener noreferrer"
            class="gallery-whatsapp-link md:hidden absolute bottom-2 right-2 bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-bold py-2 px-3 rounded-xl text-xs shadow-lg hover:shadow-xl z-20 transition-all duration-300 hover:scale-105 flex items-center gap-1"
            onclick="event.stopPropagation()"
          >
