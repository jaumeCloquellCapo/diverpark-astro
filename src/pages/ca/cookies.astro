---
import PageLayout from '../../layouts/PageLayout.astro';
import { t } from '../../utils/i18n';

const locale = 'ca';
const title = t(locale, 'cookies.metaTitle');
const description = t(locale, 'cookies.metaDescription');
---

<PageLayout title={`${title} | DIVERPARK`} description={description} wrapperClass="bg-gray-50">
  <div class="min-h-screen bg-gray-50 py-16">
    <div class="container mx-auto px-4 max-w-4xl">
      <h1 class="text-4xl font-bold text-gray-900 mb-8">{t(locale, 'cookies.title')}</h1>

      <div class="bg-white rounded-xl shadow-md p-8 space-y-6">
        <p class="text-lg text-gray-700 leading-relaxed mb-8">
          {t(locale, 'cookies.intro')}
        </p>

        <section>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">{t(locale, 'cookies.whatAreTitle')}</h2>
          <p class="text-gray-700">{t(locale, 'cookies.whatAreText')}</p>
        </section>

        <section>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">{t(locale, 'cookies.typesTitle')}</h2>
          <h3 class="text-xl font-bold text-gray-800 mb-2">{t(locale, 'cookies.technicalTitle')}</h3>
          <p class="text-gray-700 mb-4">{t(locale, 'cookies.technicalText')}</p>
          <h3 class="text-xl font-bold text-gray-800 mb-2">{t(locale, 'cookies.analyticsTitle')}</h3>
          <p class="text-gray-700 mb-4">{t(locale, 'cookies.analyticsText')}</p>
        </section>

        <section>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">{t(locale, 'cookies.usedTitle')}</h2>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-100">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">{t(locale, 'cookies.cookieName')}</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">{t(locale, 'cookies.purpose')}</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">{t(locale, 'cookies.duration')}</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <tr>
                  <td class="px-6 py-4 text-sm text-gray-700">i18n_redirected</td>
                  <td class="px-6 py-4 text-sm text-gray-700">{t(locale, 'cookies.languagePurpose')}</td>
                  <td class="px-6 py-4 text-sm text-gray-700">1 {t(locale, 'cookies.year')}</td>
                </tr>
                <tr>
                  <td class="px-6 py-4 text-sm text-gray-700">cookie_consent</td>
                  <td class="px-6 py-4 text-sm text-gray-700">{t(locale, 'cookies.consentPurpose')}</td>
                  <td class="px-6 py-4 text-sm text-gray-700">1 {t(locale, 'cookies.year')}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </section>

        <section>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">{t(locale, 'cookies.disableTitle')}</h2>
          <p class="text-gray-700 mb-4">{t(locale, 'cookies.disableText')}</p>
          <ul class="list-disc list-inside text-gray-700 space-y-2">
            <li><a href="https://support.google.com/chrome/answer/95647" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:underline">Google Chrome</a></li>
            <li><a href="https://support.mozilla.org/ca/kb/habilitar-i-deshabilitar-cookies-que-els-llocs-web" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:underline">Mozilla Firefox</a></li>
            <li><a href="https://support.apple.com/ca-es/guide/safari/sfri11471/mac" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:underline">Safari</a></li>
            <li><a href="https://support.microsoft.com/ca-es/microsoft-edge/eliminar-las-cookies-en-microsoft-edge-63947406-40ac-c3b8-57b9-2a946a29ae09" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:underline">Microsoft Edge</a></li>
          </ul>
        </section>
      </div>
    </div>
  </div>
</PageLayout>
