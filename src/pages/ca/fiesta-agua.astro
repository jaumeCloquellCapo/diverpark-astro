---
import ImageGallery from '../../components/ImageGallery.astro';
import PageLayout from '../../layouts/PageLayout.astro';
import { Schema } from 'astro-seo-schema';
import { t } from '../../utils/i18n';

const locale = 'ca';
const title = t(locale, 'pages.waterParty.meta.title');
const description = t(locale, 'pages.waterParty.meta.description');
const ogImage = 'https://diverpark.net/images/castillos-acuaticos/castillo-hinchable-acuatico-castillo-agua-1.jpg';
const whatsappMessage = "Hola! M'interessen les festes d'aigua";
const whatsappHref = `https://wa.me/34625458704?text=${encodeURIComponent(whatsappMessage)}`;

const images = [
  ...['fiesta-espuma-2e40b1bf-4237-4acf-a361-7d8f0de8cf-1.jpg', 'fiesta-espuma-2e40b1bf-4237-4acf-a361-7d8f0de8cf-4.jpg', 'fiesta-espuma-espuma-3.jpg', 'fiesta-espuma-espuma-6.jpg', 'fiesta-espuma-fe3fafa5-c782-4261-aa1c-9ae4d5a727ae-2.jpg', 'fiesta-espuma-fe3fafa5-c782-4261-aa1c-9ae4d5a727ae-5.jpg'].map((f) => `/images/fiesta-espuma/${f}`),
  ...['castillo-hinchable-acuatico-castillo-agua-1.jpg', 'castillo-hinchable-acuatico-castillo-agua-2.jpg', 'castillo-hinchable-acuatico-tatamis-7.jpg', 'castillo-hinchable-acuatico-catapulta-4.jpg', 'castillo-hinchable-acuatico-castillo-agua-9.jpg', 'castillo-hinchable-acuatico-tatamis-23.jpg'].map((f) => `/images/castillos-acuaticos/${f}`),
];

const baseUrl = 'https://diverpark.net';
const pageUrl = `${baseUrl}/ca/fiesta-agua`;
const homeUrl = `${baseUrl}/ca`;
const jsonLdGraph = [
  {
    '@context': 'https://schema.org',
    '@type': 'Service',
    '@id': `${pageUrl}#service`,
    name: t(locale, 'pages.waterParty.title'),
    description,
    provider: { '@type': 'LocalBusiness', '@id': `${baseUrl}#organization`, name: 'Diverpark', url: baseUrl, telephone: '+34625458704', email: 'catidiver@hotmail.com' },
    areaServed: { '@type': 'City', name: 'Mallorca', '@id': 'https://www.wikidata.org/wiki/Q8828' },
    serviceType: "Lloguer de festes d'aigua i espuma",
    image: [`${baseUrl}/images/castillos-acuaticos/castillo-hinchable-acuatico-castillo-agua-1.jpg`, `${baseUrl}/images/fiesta-espuma/fiesta-espuma-espuma-3.jpg`],
    url: pageUrl,
  },
  {
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
    itemListElement: [
      { '@type': 'ListItem', position: 1, name: t(locale, 'nav.home'), item: homeUrl },
      { '@type': 'ListItem', position: 2, name: t(locale, 'pages.waterParty.title'), item: pageUrl },
    ],
  },
];

const schemaItem = { '@context': 'https://schema.org' as const, '@graph': jsonLdGraph };
const imagesAvailableText = t(locale, 'gallery.imagesAvailable').replace('{count}', String(images.length));
const serviceCards = [
  { key: 'tatamis', icon: 'üåä', gradient: 'from-cyan-100 to-blue-100', border: 'border-cyan-300' },
  { key: 'catapult', icon: 'üí¶', gradient: 'from-blue-100 to-indigo-100', border: 'border-blue-300' },
  { key: 'foamCannon', icon: 'üßº', gradient: 'from-purple-100 to-pink-100', border: 'border-purple-300' },
  { key: 'waterCastles', icon: 'üè∞', gradient: 'from-teal-100 to-cyan-100', border: 'border-teal-300' },
];
---

<PageLayout title={`${title} | DIVERPARK`} description={description} wrapperClass="bg-white">
  <Fragment slot="head">
    <meta property="og:image" content={ogImage} />
    <Schema item={schemaItem as import('schema-dts').Graph} />
  </Fragment>
  <section class="relative py-24 md:py-32 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-cyan-100 via-blue-100 to-purple-100"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-block mb-6">
          <span class="px-4 py-2 bg-white rounded-full text-sm font-semibold text-cyan-600 shadow-sm border border-cyan-100">üí¶ {t(locale, 'nav.attractions')}</span>
        </div>
        <h1 class="text-5xl md:text-7xl font-bold text-gray-900 mb-6 tracking-tight font-display">{t(locale, 'pages.waterParty.title')}</h1>
        <p class="text-xl md:text-2xl text-gray-700 mb-10 leading-relaxed max-w-3xl mx-auto font-medium">{t(locale, 'pages.waterParty.subtitle')}</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a href={whatsappHref} target="_blank" rel="noopener noreferrer" class="btn-whatsapp text-lg px-8 py-4 inline-flex items-center gap-3">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
            {t(locale, 'hero.reserve')}
          </a>
          <a href="#servicios" class="text-lg px-8 py-4 bg-white hover:bg-gray-50 text-gray-900 font-semibold rounded-xl border-2 border-gray-200 hover:border-gray-300 transition-all duration-300 hover:shadow-md">Veure Serveis ‚Üì</a>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 border-t border-gray-100">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <p class="text-lg md:text-xl text-gray-600 leading-relaxed text-center">{t(locale, 'pages.waterParty.intro')}</p>
      </div>
    </div>
  </section>

  <section id="servicios" class="py-16 bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 font-display">{t(locale, 'pages.about.servicesTitle')}</h2>
          <p class="text-lg text-gray-700 font-medium">Tot el que necessites per a una festa d'aigua inoblidable</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
          {serviceCards.map((card) => (
            <div class={`group relative bg-gradient-to-br ${card.gradient} rounded-3xl p-6 border-4 ${card.border} hover:shadow-2xl hover:scale-105 transition-all duration-300`}>
              <div class="text-6xl mb-4">{card.icon}</div>
              <h3 class="text-xl font-bold text-gray-900 mb-4 font-display">{t(locale, `pages.waterParty.${card.key}.title`)}</h3>
              <ul class="space-y-2 text-sm text-gray-700">
                <li class="flex items-start gap-2"><span class="font-bold mt-0.5">‚úì</span><span>{t(locale, `pages.waterParty.${card.key}.item1`)}</span></li>
                <li class="flex items-start gap-2"><span class="font-bold mt-0.5">‚úì</span><span>{t(locale, `pages.waterParty.${card.key}.item2`)}</span></li>
                <li class="flex items-start gap-2"><span class="font-bold mt-0.5">‚úì</span><span>{t(locale, `pages.waterParty.${card.key}.item3`)}</span></li>
                <li class="flex items-start gap-2"><span class="font-bold mt-0.5">‚úì</span><span>{t(locale, `pages.waterParty.${card.key}.item4`)}</span></li>
              </ul>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <section id="galeria" class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 font-display">{t(locale, 'pages.waterParty.galleryTitle')}</h2>
        <p class="text-lg text-gray-600">{imagesAvailableText}</p>
      </div>
      <ImageGallery images={images} alt={description} groupByCastle={true} locale={locale} />
    </div>
  </section>

  <section class="py-20 bg-gradient-to-br from-orange-50 via-pink-50 to-purple-50 border-t border-gray-100">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h3 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6 font-display">{t(locale, 'common.readyToBook')}</h3>
        <p class="text-lg text-gray-700 mb-8 font-medium">Contacta'ns per WhatsApp i et ajudarem a organitzar la millor festa d'aigua</p>
        <a href={whatsappHref} target="_blank" rel="noopener noreferrer" class="btn-whatsapp text-lg px-10 py-4 inline-flex items-center gap-3">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
          {t(locale, 'common.contactWhatsApp')}
        </a>
      </div>
    </div>
  </section>
</PageLayout>
