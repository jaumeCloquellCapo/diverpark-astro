---
import ImageGallery from '../components/ImageGallery.astro';
import PageLayout from '../layouts/PageLayout.astro';
import { Schema } from 'astro-seo-schema';
import { t } from '../utils/i18n';

const locale = Astro.currentLocale ?? 'es';
const basePath = '';
const title = t(locale, 'pages.slideCastles.meta.title');
const description = t(locale, 'pages.slideCastles.meta.description');
const ogImage = 'https://diverpark.net/images/castillos-tobogan/castillo-hinchable-tobogan-robot-8.jpg';
const whatsappMessage = 'Hola! Me interesan los castillos con tobogán';
const whatsappHref = `https://wa.me/34625458704?text=${encodeURIComponent(whatsappMessage)}`;

const images = [
  'castillo-hinchable-tobogan-formula-1.jpg',
  'castillo-hinchable-tobogan-granja-2.jpg',
  'castillo-hinchable-tobogan-granja-3.jpg',
  'castillo-hinchable-tobogan-ola-4.jpg',
  'castillo-hinchable-tobogan-ola-5.jpg',
  'castillo-hinchable-tobogan-robot-6.jpg',
  'castillo-hinchable-tobogan-robot-7.jpg',
  'castillo-hinchable-tobogan-robot-8.jpg',
  'castillo-hinchable-tobogan-formula-9.jpg',
  'castillo-hinchable-tobogan-formula-10.jpg',
  'castillo-hinchable-tobogan-dragon-11.jpg',
  'castillo-hinchable-tobogan-dragon-12.jpg',
  'castillo-hinchable-tobogan-dragon-13.jpg',
  'castillo-hinchable-tobogan-fantasia-14.jpg',
  'castillo-hinchable-tobogan-fantasia-15.jpg',
  'castillo-hinchable-tobogan-fantasia-16.jpg',
  'castillo-hinchable-tobogan-dragon-17.jpg',
  'castillo-hinchable-tobogan-formula-18.jpg',
  'castillo-hinchable-tobogan-formula-19.jpg',
  'castillo-hinchable-tobogan-granja-20.jpg',
  'castillo-hinchable-tobogan-granja-21.jpg',
  'castillo-hinchable-tobogan-ola-22.jpg',
  'castillo-hinchable-tobogan-ola-23.jpg',
  'castillo-hinchable-tobogan-robot-24.jpg',
  'castillo-hinchable-tobogan-robot-25.jpg',
  'castillo-hinchable-tobogan-robot-26.jpg',
  'castillo-hinchable-tobogan-dragon-27.jpg',
  'castillo-hinchable-tobogan-dragon-28.jpg',
  'castillo-hinchable-tobogan-fantasia-29.jpg',
  'castillo-hinchable-tobogan-fantasia-30.jpg',
  'castillo-hinchable-tobogan-fantasia-31.jpg',
  'castillo-hinchable-tobogan-formula-32.jpg',
  'castillo-hinchable-tobogan-formula-33.jpg',
].map((img) => `/images/castillos-tobogan/${img}`);

const baseUrl = 'https://diverpark.net';
const path = '/castillos-tobogan';
const pageUrl = `${baseUrl}${path}`;
const homeUrl = baseUrl;
const jsonLdGraph = [
  {
    '@context': 'https://schema.org',
    '@type': 'Service',
    '@id': `${pageUrl}#service`,
    name: t(locale, 'pages.slideCastles.title'),
    description,
    provider: { '@type': 'LocalBusiness', '@id': `${baseUrl}#organization`, name: 'Diverpark', url: baseUrl, telephone: '+34625458704', email: 'catidiver@hotmail.com' },
    areaServed: { '@type': 'City', name: 'Mallorca', '@id': 'https://www.wikidata.org/wiki/Q8828' },
    serviceType: locale === 'es' ? 'Alquiler de castillos hinchables con tobogán' : locale === 'ca' ? "Lloguer de castells inflables amb tobogan" : 'Bouncy castle with slide rental',
    image: [`${baseUrl}/images/castillos-tobogan/castillo-hinchable-tobogan-robot-8.jpg`, `${baseUrl}/images/castillos-tobogan/castillo-hinchable-tobogan-granja-2.jpg`, `${baseUrl}/images/castillos-tobogan/castillo-hinchable-tobogan-ola-4.jpg`],
    url: pageUrl,
  },
  {
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
    itemListElement: [
      { '@type': 'ListItem', position: 1, name: t(locale, 'nav.home'), item: homeUrl },
      { '@type': 'ListItem', position: 2, name: t(locale, 'pages.slideCastles.title'), item: pageUrl },
    ],
  },
];

const schemaItem = { '@context': 'https://schema.org' as const, '@graph': jsonLdGraph };
const imagesAvailableText = t(locale, 'gallery.imagesAvailable').replace('{count}', String(images.length));
---

<PageLayout title={`${title} | DIVERPARK`} description={description} wrapperClass="bg-white">
  <Fragment slot="head">
    <meta property="og:image" content={ogImage} />
    <Schema item={schemaItem} />
  </Fragment>
      <!-- Hero -->
      <section class="relative py-24 md:py-32 overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-green-50 via-emerald-50 to-teal-50"></div>
        <div class="container mx-auto px-4 relative z-10">
          <div class="max-w-4xl mx-auto text-center">
            <div class="inline-block mb-6">
              <span class="px-4 py-2 bg-white rounded-full text-sm font-semibold text-green-600 shadow-sm border border-green-100">{t(locale, 'nav.castles')}</span>
            </div>
            <h1 class="text-5xl md:text-7xl font-bold text-gray-900 mb-6 tracking-tight font-display">{t(locale, 'pages.slideCastles.title')}</h1>
            <p class="text-xl md:text-2xl text-gray-600 mb-10 leading-relaxed max-w-3xl mx-auto">{t(locale, 'pages.slideCastles.subtitle')}</p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
              <a href={whatsappHref} target="_blank" rel="noopener noreferrer" class="btn-whatsapp text-lg px-8 py-4 inline-flex items-center gap-3">
