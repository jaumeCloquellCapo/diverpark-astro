---
import PageLayout from '../../layouts/PageLayout.astro';
import { t } from '../../utils/i18n';

const locale = 'en';
const title = t(locale, 'legal.metaTitle');
const description = t(locale, 'legal.metaDescription');
---

<PageLayout title={`${title} | DIVERPARK`} description={description} wrapperClass="bg-gray-50">
  <Fragment slot="head">
    <meta name="robots" content="noindex, nofollow" />
  </Fragment>
  <div class="min-h-screen bg-gray-50 py-16">
    <div class="container mx-auto px-4 max-w-4xl">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">{t(locale, 'legal.title')}</h1>
      <p class="text-xl font-semibold text-gray-700 mb-8">{t(locale, 'legal.siteName')}</p>

      <div class="bg-white rounded-xl shadow-md p-8 space-y-10">
        {[1, 2, 3, 4, 5, 6].map((i) => (
          <section>
            <p class="text-gray-700 leading-relaxed whitespace-pre-line">{t(locale, `legal.section${i}`)}</p>
          </section>
        ))}
        <p class="text-gray-500 text-sm pt-4 border-t border-gray-200">{t(locale, 'legal.footer')}</p>
      </div>
    </div>
  </div>
</PageLayout>
