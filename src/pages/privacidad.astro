---
import PageLayout from '../layouts/PageLayout.astro';
import { t } from '../utils/i18n';

const locale = Astro.currentLocale ?? 'es';
const title = t(locale, 'privacy.metaTitle');
const description = t(locale, 'privacy.metaDescription');
---

<PageLayout title={`${title} | DIVERPARK`} description={description} wrapperClass="bg-gray-50">
  <div class="min-h-screen bg-gray-50 py-16">
    <div class="container mx-auto px-4 max-w-4xl">
      <h1 class="text-4xl font-bold text-gray-900 mb-8">{t(locale, 'privacy.title')}</h1>

      <div class="bg-white rounded-xl shadow-md p-8 space-y-6">
        <p class="text-lg text-gray-700 leading-relaxed mb-8">
          {t(locale, 'privacy.intro')}
        </p>
        <section>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">{t(locale, 'privacy.responsibleTitle')}</h2>
          <ul class="list-disc list-inside text-gray-700 space-y-2">
            <li><strong>{t(locale, 'privacy.responsible')}:</strong> DIVERPARK</li>
            <li><strong>{t(locale, 'privacy.nif')}:</strong> [TU NIF/CIF]</li>
            <li><strong>{t(locale, 'privacy.address')}:</strong> [TU DIRECCIÓN], Mallorca, España</li>
            <li><strong>{t(locale, 'privacy.email')}:</strong> catidiver@hotmail.com</li>
            <li><strong>{t(locale, 'privacy.phone')}:</strong> +34 625 458 704</li>
          </ul>
        </section>

        <section>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">{t(locale, 'privacy.purposeTitle')}</h2>
          <p class="text-gray-700 mb-4">{t(locale, 'privacy.purposeText')}</p>
          <ul class="list-disc list-inside text-gray-700 space-y-2">
            <li>{t(locale, 'privacy.purpose1')}</li>
            <li>{t(locale, 'privacy.purpose2')}</li>
            <li>{t(locale, 'privacy.purpose3')}</li>
          </ul>
        </section>

        <section>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">{t(locale, 'privacy.legitimationTitle')}</h2>
          <p class="text-gray-700">{t(locale, 'privacy.legitimationText')}</p>
        </section>

        <section>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">{t(locale, 'privacy.conservationTitle')}</h2>
          <p class="text-gray-700">{t(locale, 'privacy.conservationText')}</p>
        </section>

        <section>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">{t(locale, 'privacy.recipientsTitle')}</h2>
          <p class="text-gray-700">{t(locale, 'privacy.recipientsText')}</p>
        </section>

        <section>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">{t(locale, 'privacy.rightsTitle')}</h2>
          <p class="text-gray-700 mb-4">{t(locale, 'privacy.rightsText')}</p>
          <ul class="list-disc list-inside text-gray-700 space-y-2">
            <li>{t(locale, 'privacy.right1')}</li>
            <li>{t(locale, 'privacy.right2')}</li>
            <li>{t(locale, 'privacy.right3')}</li>
            <li>{t(locale, 'privacy.right4')}</li>
            <li>{t(locale, 'privacy.right5')}</li>
          </ul>
          <p class="text-gray-700 mt-4">{t(locale, 'privacy.rightsContact')}</p>
        </section>

        <section>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">{t(locale, 'privacy.whatsappTitle')}</h2>
          <p class="text-gray-700">{t(locale, 'privacy.whatsappText')}</p>
        </section>
      </div>
    </div>
  </div>
</PageLayout>
