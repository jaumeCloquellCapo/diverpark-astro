---
import PageLayout from '../layouts/PageLayout.astro';
import { Schema } from 'astro-seo-schema';
import { t } from '../utils/i18n';

const locale = Astro.currentLocale ?? 'es';
const title = t(locale, 'pages.about.meta.title');
const description = t(locale, 'pages.about.meta.description');
const ogImage = 'https://diverpark.net/images/general/diverPark.jpg';
const whatsappHref = 'https://wa.me/34625458704?text=' + encodeURIComponent('Hola! Me gustar√≠a informaci√≥n sobre sus servicios');

const baseUrl = 'https://diverpark.net';
const path = '/sobre-nosotros';
const pageUrl = `${baseUrl}${path}`;
const homeUrl = baseUrl;
const inLanguage = locale === 'ca' ? 'ca-ES' : locale === 'en' ? 'en-US' : 'es-ES';
const jsonLdGraph = [
  {
    '@context': 'https://schema.org',
    '@type': 'AboutPage',
    '@id': `${pageUrl}#page`,
    name: t(locale, 'pages.about.title'),
    description: t(locale, 'pages.about.subtitle'),
    url: pageUrl,
    mainEntity: { '@id': `${baseUrl}#organization` },
    inLanguage,
  },
  {
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
    itemListElement: [
      { '@type': 'ListItem', position: 1, name: t(locale, 'nav.home'), item: homeUrl },
      { '@type': 'ListItem', position: 2, name: t(locale, 'pages.about.title'), item: pageUrl },
    ],
  },
];

const schemaItem = { '@context': 'https://schema.org' as const, '@graph': jsonLdGraph };
const serviceItems = [
  { key: 'castles', icon: 'üè∞' },
  { key: 'entertainment', icon: 'üé≠' },
  { key: 'water', icon: 'üí¶' },
  { key: 'events', icon: 'üéâ' },
];
---

<PageLayout title={`${title} | DIVERPARK`} description={description} wrapperClass="bg-white">
  <Fragment slot="head">
    <meta property="og:image" content={ogImage} />
    <Schema item={schemaItem} />
  </Fragment>
  <section class="relative py-24 md:py-32 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <div class="inline-block mb-6">
            <span class="px-4 py-2 bg-white rounded-full text-sm font-semibold text-blue-600 shadow-sm border border-blue-100">{t(locale, 'nav.aboutUs')}</span>
          </div>
          <h1 class="text-5xl md:text-7xl font-bold text-gray-900 mb-6 tracking-tight">{t(locale, 'pages.about.title')}</h1>
          <p class="text-xl md:text-2xl text-gray-600 leading-relaxed max-w-3xl mx-auto">{t(locale, 'pages.about.subtitle')}</p>
        </div>
        <div class="relative rounded-2xl overflow-hidden shadow-2xl mb-12">
          <img src="/images/general/diverPark.jpg" alt="Diverpark - Castillos Hinchables y Animaciones Infantiles en Mallorca" width="1200" height="600" loading="eager" fetchpriority="high" class="w-full h-[400px] md:h-[600px] object-cover" />
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">{t(locale, 'pages.about.whoWeAre')}</h2>
          <div class="prose prose-lg max-w-none text-gray-700 leading-relaxed space-y-4">
            <p class="text-xl">{t(locale, 'pages.about.intro1')}</p>
            <p class="text-lg">{t(locale, 'pages.about.intro2')}</p>
            <p class="text-lg mt-4">{t(locale, 'pages.about.intro3')}</p>
          </div>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-16">
          <div class="text-center p-6 bg-gradient-to-br from-blue-50 to-purple-50 rounded-xl">
            <div class="text-4xl font-bold text-blue-600 mb-2">15+</div>
            <div class="text-sm text-gray-600 font-semibold">{t(locale, 'pages.about.stats.years')}</div>
          </div>
          <div class="text-center p-6 bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl">
            <div class="text-4xl font-bold text-purple-600 mb-2">2500+</div>
            <div class="text-sm text-gray-600 font-semibold">{t(locale, 'pages.about.stats.events')}</div>
          </div>
          <div class="text-center p-6 bg-gradient-to-br from-pink-50 to-red-50 rounded-xl">
            <div class="text-4xl font-bold text-pink-600 mb-2">50+</div>
            <div class="text-sm text-gray-600 font-semibold">{t(locale, 'pages.about.stats.castles')}</div>
          </div>
          <div class="text-center p-6 bg-gradient-to-br from-cyan-50 to-blue-50 rounded-xl">
            <div class="text-4xl font-bold text-cyan-600 mb-2">4.9/5</div>
            <div class="text-sm text-gray-600 font-semibold">{t(locale, 'pages.about.stats.rating')}</div>
          </div>
        </div>

        <div class="bg-gray-50 rounded-2xl p-8 md:p-12 mb-16">
          <div class="flex items-start gap-6">
            <div class="flex-shrink-0">
              <div class="w-16 h-16 bg-gradient-to-br from-green-400 to-emerald-500 rounded-xl flex items-center justify-center text-4xl">üõ°Ô∏è</div>
            </div>
            <div>
              <h2 class="text-3xl font-bold text-gray-900 mb-4">{t(locale, 'pages.about.safety.title')}</h2>
              <p class="text-lg text-gray-700 leading-relaxed mb-4">{t(locale, 'pages.about.safety.description')}</p>
              <ul class="space-y-3">
                <li class="flex items-start gap-3"><span class="text-green-500 font-bold mt-1">‚úì</span><span class="text-gray-700">{t(locale, 'pages.about.safety.item1')}</span></li>
                <li class="flex items-start gap-3"><span class="text-green-500 font-bold mt-1">‚úì</span><span class="text-gray-700">{t(locale, 'pages.about.safety.item2')}</span></li>
                <li class="flex items-start gap-3"><span class="text-green-500 font-bold mt-1">‚úì</span><span class="text-gray-700">{t(locale, 'pages.about.safety.item3')}</span></li>
                <li class="flex items-start gap-3"><span class="text-green-500 font-bold mt-1">‚úì</span><span class="text-gray-700">{t(locale, 'pages.about.safety.item4')}</span></li>
              </ul>
            </div>
          </div>
        </div>

        <div class="mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8 text-center">{t(locale, 'pages.about.servicesTitle')}</h2>
          <div class="grid md:grid-cols-2 gap-6">
            {serviceItems.map((item) => (
              <div class="border-2 border-gray-100 rounded-xl p-6 hover:border-blue-200 hover:shadow-lg transition-all duration-300">
                <div class="text-4xl mb-4">{item.icon}</div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">{t(locale, `pages.about.services.${item.key}.title`)}</h3>
                <p class="text-gray-600">{t(locale, `pages.about.services.${item.key}.description`)}</p>
              </div>
            ))}
          </div>
        </div>

        <div class="text-center bg-gradient-to-br from-blue-500 to-purple-600 text-white rounded-2xl p-12">
          <div class="text-5xl mb-6">üìç</div>
